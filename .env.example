# ================================
# Oratio Environment Configuration
# ================================

# -----------------
# Application Settings
# -----------------
API_ENV=development
APP_NAME=Oratio
DEBUG=true

# -----------------
# Replit Settings (Auto-detected on Replit)
# -----------------
# These are automatically set when running on Replit
# REPL_ID=<auto-detected>
# REPL_SLUG=<auto-detected>
# REPL_OWNER=<auto-detected>
# REPLIT_DEV_DOMAIN=<auto-detected>

# -----------------
# Database Configuration
# -----------------
# Replit Database is used by default on Replit
# For local development, in-memory storage is used
USE_REPLIT_DB=true

# -----------------
# AI Configuration
# -----------------
# Replit AI is used by default on Replit
# For local development, mock responses are used
USE_REPLIT_AI=true

# Optional: Fact-Checking API (improves AI accuracy)
# Get free key at https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# -----------------
# Authentication
# -----------------
# Replit Auth is used by default on Replit
# Secret key for session management
SECRET_KEY=your_secret_key_here_change_in_production_use_openssl_rand_hex_32

# -----------------
# CORS Configuration
# -----------------
# Automatically includes Replit domains when running on Replit
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# -----------------
# WebSocket Configuration
# -----------------
WS_HOST=0.0.0.0
WS_PORT=8000

# -----------------
# File Upload Settings
# -----------------
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=pdf,mp3,wav,ogg,m4a
UPLOAD_DIR=./uploads

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -----------------
# LCR Model Weights
# -----------------
# Logic, Credibility, Rhetoric scoring weights (must sum to 100)
LCR_LOGIC_WEIGHT=40
LCR_CREDIBILITY_WEIGHT=35
LCR_RHETORIC_WEIGHT=25

# -----------------
# Debate Settings
# -----------------
DEFAULT_ROUNDS=3
DEFAULT_DURATION_MINUTES=10
MAX_PARTICIPANTS_PER_ROOM=2
MAX_SPECTATORS_PER_ROOM=100

# -----------------
# Gamification
# -----------------
XP_PER_DEBATE=100
XP_PER_TRAINING_EXERCISE=50
XP_MULTIPLIER_WIN=1.5

# -----------------
# Logging
# -----------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# -----------------
# Frontend Settings
# -----------------
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# -----------------
# Optional: Legacy Database (Not used in Replit version)
# -----------------
# DATABASE_URL=sqlite:///./oratio.db
# DB_USER=oratio
# DB_PASSWORD=oratio
# DB_NAME=oratio_db

# -----------------
# Optional: Legacy AI APIs (Not used in Replit version)
# -----------------
# OPENAI_API_KEY=your_openai_api_key_here
# WHISPER_API_KEY=your_whisper_api_key_here

